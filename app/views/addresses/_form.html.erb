<%= form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :line_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :line_1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :line_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :line_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pincode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pincode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :landmark, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :landmark, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nick_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nick_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <!--%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn' %-->
	<input action="action" type="button" value="Cancel" onclick="history.go(-1);" class ='btn btn-primary' />
  </div>
<% end %>
