<%- model_class = ProductBrand -%>
<div class="page-header">
  <h1>Brands</h1>
</div>
<% if !@product_brands.present? %>
	Sorry!! No Brands Found
<% else %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th><%= model_class.human_attribute_name(:id) %></th>
				<th>Brand</th>
				<th><%=t '.actions', :default => t("helpers.actions") %></th>
			</tr>
		</thead>
		<tbody>
			<% @product_brands.each do |product_brand| %>
				<tr>
					<td><%= link_to product_brand.id, product_brand_path(product_brand) %></td>
					<td><%= product_brand.brand_name %></td>
					<td>
						<%= link_to t('.edit', :default => t("helpers.links.edit")),
												edit_product_brand_path(product_brand), :class => 'btn btn-mini' %>
						<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
												product_brand_path(product_brand),
												:method => :delete,
												:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
												:class => 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<%= link_to t('.new', :default => "Create"),
            new_product_brand_path,
            :class => 'btn btn-primary', :style=>"color:white;" %>
