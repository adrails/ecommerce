<%- model_class = User -%>

<% if !@users.present? %>
	Sorry!! No Users Found
<% else %>
<div class="wrap">
	<table class="table table-striped">
		<thead>
			<tr>
				<th><%= model_class.human_attribute_name(:id) %></th>
				<th><%= model_class.human_attribute_name(:name) %></th>
				<th><%= model_class.human_attribute_name(:email) %></th>
				<th><%= model_class.human_attribute_name(:role_type) %></th>
				<th>Description</th>
				<th>Confirmed</th>
				<th><%=t '.actions', :default => t("helpers.actions") %></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= link_to user.id, user_path(user) %></td>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
					<td><%= user.role_type %></td>
					<td><%= user.desc %></td>
					<td><%= user.confirmed_at %></td>
					<td>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),user_path(user),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
</div>

