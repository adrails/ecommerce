<% if !@order.present? %>
	Sorry!! No Products Found
<% else %>
<div class="wrap">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Customer Name</th>
				<th>Retailer Name</th>
				<th>Product  Name</th>
				<th>Price</th>
				<th>Confirmed</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
		<% @order && @order.each do |f|%>
			<%f.product_ids.each do |k|%>
			<% product_item = find_product_item(k)%>
				<tr>
				<%if product_item.user_id == current_user.id %>
					<td><%= f.cart.user.name%></td>
					<td><%= ProductItem.find(k).user.name%></td>
					<td><%= product_item.title %></td>
					<td><%= product_item.price %></td>
					<td>
				<!--= link_to t('.destroy', :default => t("helpers.links.destroy")),user_path(user),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-mini btn-danger' %-->
					</td>
				<%end%>
				</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
<% end %>
</div>

