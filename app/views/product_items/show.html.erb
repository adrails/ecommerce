<%- model_class = ProductItem -%>
<div class="page-header">
  <h1><%= @product_item.title%></h1>
</div>
<% if @product_item.pictures.present?%>
	<% @product_item.pictures.each do |f|%>
		<%=image_tag f.image.url(:thumb)%>
	<% end %>
<% end %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @product_item.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:available_quantity) %>:</strong></dt>
  <dd><%= @product_item.available_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @product_item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @product_item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @product_item.is_active %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              product_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_item_path(@product_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_item_path(@product_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
