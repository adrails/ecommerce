<div class="register_account">
	<div class="wrap">
		<div>
		</div>
		<h4 class="title">Create an Account</h4>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<div class="col_1_of_2 span_1_of_2">
				<div>
					<label for="modlgn_username">Name</label>
					<input type="text" name="user[name]" placeholder="Name" class="inputbox" >
				</div>
				<div>
					<label for="modlgn_username">Email</label>
					<input type="text" name="user[email]" placeholder="Email" class="inputbox">
				</div>
				<%if params[:retailer]%>
					<%= f.hidden_field :role_id, value:2 %>
					<%= f.hidden_field :retailer_approval, value: false %>
					<div>
						<label for="modlgn_username">Description</label>
						<%= f.text_area :desc, :rows=>4, :cols=>50, :placeholder => "Your Text here....", :style=>"width:627px;" %>
						<!--input type="textarea" rows="4" cols="50" name="user[desc]" placeholder="Description"-->
					</div>
					<div>
						<label for="modlgn_username">Contact No</label>
						<input type="text" name="retailer[contact_no]" placeholder="Contact No">
					</div>
					<div>
						<label for="modlgn_username">Gender</label>
						<input type="radio" name="retailer[gender]" value="male">Male</input>
						<input type="radio" name="retailer[gender]" value="female">Female</input>
					</div>
					<% @password = (0..10).map { ('A'..'Z').to_a[rand(26)] }.join%>
					<%=f.hidden_field :password, :value=>@password%>
					<%=f.hidden_field :password_confirmation, :value=>@password%>
				<% else %>
					<%= f.hidden_field :role_id, :value=>3 %>	
					<div>
						<label for="modlgn_username">Password</label>
						<input id="modlgn_passwd" type="password" name="user[password]" class="inputbox" size="18" autocomplete="off" placeholder="Password">
					</div>	
					<div>
						<label for="modlgn_username">Password Confirmation</label>
						<input type="password" name="user[password_confirmation]" class="inputbox" size="18" placeholder="Password Confirmation">
					</div>
					<div>
				<% end %>
				<div style="margin-top:25px;">
					<%= f.button "Sign up", :class=>"grey" %>
				</div>
				<!--p class="terms">By clicking 'Sign up' you agree to the <a href="#">Terms &amp; Conditions</a>.</p-->
				</div>
			</div>
		<% end %>
		<div class="clear"></div>
		<div class="back">
			<a href="/home/index" style="color:red;">Cancel</a>
		</div>
	</div>
</div>
    
		
